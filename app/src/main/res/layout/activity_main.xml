<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent_match_parent"
    android:padding="@dimen/padding_half"
    android:orientation="vertical">

    <LinearLayout
        style="@style/match_parent_wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/url"
            style="@style/edit_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/margin_half"
            android:text="@string/default_website" />

        <ImageView
            android:id="@+id/button"
            style="@style/image_button"
            android:layout_marginLeft="@dimen/margin_half"
            android:src="@drawable/ic_action_hardware_keyboard_arrow_right"/>

    </LinearLayout>

    <RelativeLayout
        style="@style/match_parent_match_parent" >

        <WebView
            android:id="@+id/web_view"
            style="@style/match_parent_match_parent" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:padding="@dimen/progressbar_padding"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
